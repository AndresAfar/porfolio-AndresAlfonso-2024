---
import img from '@assets/img/img2-2B16a7Jd.jpeg';
---

<div class="p-8 max-w-3xl">
    <div class="flex flex-col md:flex-row gap-8 items-center">
      <!-- Imagen de Perfil -->
      <div class="relative group">
        <img 
          src={img.src}
          alt="Profile" 
          class="w-48 h-48 rounded-full object-cover shadow-md 
                 transition-transform duration-300 ease-in-out hover:scale-105"
        />
      </div>
      <!-- InformaciÃ³n del Perfil -->
      
      <div class="flex-1 text-center md:text-left space-y-4">
        <div class="flex flex-col items-center gap-4 md:flex-row">
            <h1 class="text-3xl font-bold text-gray-200">
              Andres Alfonso
            </h1>
            <a href="#" 
                target="_blank" 
                rel="noopener noreferrer" 
                class="flex items-center justify-center transition-transform transform hover:scale-105">
                    <div class="relative flex items-center">
                        <span class="relative inline-flex rounded-full p-[2px] overflow-hidden bg-transparent">
                            <div class="relative flex items-center justify-center w-full px-4 py-2 text-sm font-semibold border-2 border-emerald-700 text-gray-200 bg-slate-950/90 rounded-full dark:bg-gray-800 dark:text-gray-100 whitespace-nowrap">
                                Disponible para trabajar
                            </div>
                        </span>
                    </div>
            </a>
        </div>
        <p class="text-lg text-gray-100">
          Software Developer
        </p>
        
        <!-- Enlaces Sociales -->
        <div class="flex flex-wrap gap-4 justify-center md:justify-start">
          <a 
            href="#" 
            class="px-4 py-2 bg-gray-800 text-gray-100 border-2 border-gray-600 rounded-2xl hover:text-gray-800 hover:bg-gray-100 
                   transition-colors duration-300 font-medium"
          >
            LinkedIn
          </a>
          <a 
            href="#" 
            class="px-4 py-2 bg-gray-800 text-gray-100 border-2 border-gray-600 rounded-2xl hover:text-gray-800 hover:bg-gray-100 
                   transition-colors duration-300 font-medium"
          >
            GitHub
          </a>
          <a 
            href="#" 
            class="px-4 py-2 bg-gray-800 text-gray-100 border-2 border-gray-600 rounded-2xl hover:text-gray-800 hover:bg-gray-100 
                   transition-colors duration-300 font-medium"
          >
            Twitter
          </a>
        </div>
      </div>
    </div>
  </div>
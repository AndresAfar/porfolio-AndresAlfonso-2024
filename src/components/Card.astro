---
interface Props {
    title: string;
    description: string;
    image: ImageMetadata;
    link: string;
}

const { title, description, image, link } = Astro.props;
---

<div class="group w-full bg-gray-800 border border-gray-600 rounded-lg shadow-md transition-all duration-300 hover:shadow-xl hover:-translate-y-1 h-full">
    <a
	href={link}
	target="_blank"
	rel="noopener noreferrer"
	class="block h-full"
	>
		<!-- Image Section -->
		<div class="relative overflow-hidden rounded-lg">
			<img
				src={image.src}
				alt={title}
				class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-110"
			/>
			<!-- Overlay en hover -->
			<div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
				<span class="text-white font-medium transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300">
					Ver Proyecto â†’
				</span>
			</div>
		</div>

		<!-- Text Content -->
		<div class="p-4 flex flex-col flex-grow">
			<h3 class="text-lg font-semibold text-gray-200 group-hover:text-red-500 transition-colors duration-300">
				{title}
			</h3>
			<p class="mt-2 text-sm text-gray-400 flex-grow">
				{description}
			</p>
		</div>
	</a>
</div>